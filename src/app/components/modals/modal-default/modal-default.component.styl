.modal-default
  background: rgba(#000, .5)
  position: fixed
  top: 0
  left: 0
  width: 100%
  height: 100%
  font-size: 0
  text-align: center
  overflow-y: auto
  &:after
    content: ''
    height: 100%
    width: 0
    vertical-align: middle
    display: inline-block
  &__inner
    position: relative
    max-width: 100%
    text-align: left
    font-size: 1rem
    vertical-align: middle
    display: inline-block
    background: #ffffff
    border-radius: 3px
    box-shadow: 0 0 4px #000
    padding: 10px 0 20px
    &-title
      padding: 0 50px 20px 20px
      font-size: 1.8rem
    &-close
      cursor: pointer
      width: 40px
      position: absolute
      border: 0
      right: 0
      top: 0
      height: 40px
      background: none
      margin-left: auto
      outline: none
      &:after
      &:before
        content: ''
        display: block
        background: #000
        left: 0
        top: 0
        bottom: 0
        right: 0
        margin: auto
        width: 3px
        height: 20px
        position: absolute
      &:after
        transform: rotate(45deg)
      &:before
        transform: rotate(-45deg)
